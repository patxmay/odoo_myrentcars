<odoo>
  <!-- 
  ************************************* 
   VUE FORM 
  *************************************
  -->
  <record id="view_form_garage" model="ir.ui.view">
     <field name="name">Garage form</field>
     <field name="model">rentcars.garage</field>
     <field name="arch" type="xml">
         <form string="garage">
             <sheet>
               <h3>Première partie</h3>
               <group name="group_name1">
                 <field name="name"/>
                 <field name="active"/>
                 <field name="places_max"/>
               </group>
               <h3>Deuxième partie</h3>
               <group name="group_name2">
                 <field name="address_street"/>
                 <field name="address_zipcode"/>
                 <field name="address_city"/>
               </group>
               <h3>Deuxième partie</h3>
               <group name="group_name2">
                 <notebook>
                   <page name="page1" string="Liste des voitures">
                     <field name="vehicle_ids" widget="One2many"/>
                   </page>
                 </notebook>
               </group>
             </sheet>
         </form>
     </field>
  </record>
  <!-- 
  ************************************* 
   VUE LISTE 
  *************************************
  -->  
  <record id="view_tree_garage" model="ir.ui.view">
     <field name="name">Garage list</field>
     <field name="model">rentcars.garage</field>
     <field name="arch" type="xml">
         <tree string="garage" default_order="name asc">
             <field name="name"/>
             <field name="active"/>
             <field name="places_max"/>
         </tree>
     </field>
  </record>
  
  <!-- 
  ************************************* 
   VUE KANBAN 
  *************************************
  -->    
  <record id="view_garage_kanban" model="ir.ui.view">
	<field name="model">rentcars.garage</field>
	<field name="name">Garage kanban</field>
	<field name="arch" type="xml">
		<kanban>
			<templates>
				<t t-name="kanban-box">
				<div class="o_kanban_card">
					<field name="name"/>
					<field name="address_city"/>
				</div>
				</t>
			</templates>
		</kanban>
   </field>
  </record>
  
</odoo>