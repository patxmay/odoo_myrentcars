<odoo>
  <!-- 
  ************************************* 
   VUE FORM 
  *************************************
  -->
  <record id="view_form_option" model="ir.ui.view">
    <field name="name">Option form</field>
    <field name="model">rentcars.option</field>
    <field name="arch" type="xml">
      <form string="option">
        <group name="group_line1">
	        <field name="name"/>
	        <field name="active"/> 
	        <field name="category"/>
	        <field name="description"/>
        </group>
        <group name="group_line2">
           <notebook>
             <page name="page1" string="Liste des voitures">
               <field name="vehicle_ids" widget="One2many"/>
             </page>
             <page name="page1" string="Liste des voitures2">
               <field name="vehicle_ids" widget="many2many"/>
             </page>
           </notebook>
        </group>
      </form>
    </field>
  </record>
  <!-- 
  ************************************* 
   VUE tree 
  *************************************
  -->
  <record id="view_tree_option" model="ir.ui.view">
    <field name="name">Arbre des options</field>
    <field name="model">rentcars.option</field>
    <field name="arch" type="xml">
      <tree string="option" default_order="name asc">
        <field name="name"/>
        <field name="active"/>
      </tree>
    </field>
  </record>
</odoo>